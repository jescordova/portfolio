---
import { Mail, MapPin, Phone } from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-20 relative overflow-hidden">
  <!-- Background decoration -->
  <div
    class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-indigo-500/10 rounded-full blur-3xl pointer-events-none"
  >
  </div>

  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {t("contact.title")}
        </h2>
        <p class="text-slate-400 mb-8 text-lg">
          {t("contact.description")}
        </p>

        <div class="space-y-6">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center border border-white/10"
            >
              <Mail class="w-5 h-5 text-indigo-400" />
            </div>
            <div>
              <p class="text-sm text-slate-400">Email</p>
              <a
                href="mailto:contact@example.com"
                class="text-white hover:text-indigo-400 transition-colors"
                >yasta@gmail.com</a
              >
            </div>
          </div>

          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center border border-white/10"
            >
              <MapPin class="w-5 h-5 text-indigo-400" />
            </div>
            <div>
              <p class="text-sm text-slate-400">Localisation</p>
              <p class="text-white">Brussels, Belgium</p>
            </div>
          </div>

          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center border border-white/10"
            >
              <Phone class="w-5 h-5 text-indigo-400" />
            </div>
            <div>
              <p class="text-sm text-slate-400">Téléphone</p>
              <p class="text-white">+32 479 06 98 36</p>
            </div>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="name" class="text-sm font-medium text-slate-300"
                >{t("contact.form.name")}</label
              >
              <input
                type="text"
                id="name"
                class="w-full px-4 py-3 rounded-lg bg-slate-950/50 border border-white/10 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-all text-white placeholder-slate-500"
                placeholder="Votre nom"
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="text-sm font-medium text-slate-300"
                >{t("contact.form.email")}</label
              >
              <input
                type="email"
                id="email"
                class="w-full px-4 py-3 rounded-lg bg-slate-950/50 border border-white/10 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-all text-white placeholder-slate-500"
                placeholder="votre@email.com"
              />
            </div>
          </div>

          <div class="space-y-2">
            <label for="subject" class="text-sm font-medium text-slate-300"
              >{t("contact.form.subject")}</label
            >
            <input
              type="text"
              id="subject"
              class="w-full px-4 py-3 rounded-lg bg-slate-950/50 border border-white/10 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-all text-white placeholder-slate-500"
              placeholder="Sujet du message"
            />
          </div>

          <div class="space-y-2">
            <label for="message" class="text-sm font-medium text-slate-300"
              >{t("contact.form.message")}</label
            >
            <textarea
              id="message"
              rows="4"
              class="w-full px-4 py-3 rounded-lg bg-slate-950/50 border border-white/10 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-all text-white placeholder-slate-500 resize-none"
              placeholder="Votre message..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-4 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg font-semibold text-white hover:opacity-90 transition-opacity shadow-lg shadow-indigo-500/20"
          >
            {t("contact.form.submit")}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
