---
import {
  Code2,
  Database,
  Layout,
  Server,
  GitBranch,
  Terminal,
} from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  {
    category: "Frontend",
    icon: Layout,
    items: ["Astro", "SvelteKit", "React", "TailwindCSS", "HTML5/CSS3"],
  },
  {
    category: "Backend",
    icon: Server,
    items: ["Node.js", "Express", "TypeScript", "API REST"],
  },
  {
    category: "Database",
    icon: Database,
    items: ["MongoDB", "PostgreSQL", "Firebase"],
  },
  {
    category: "Tools",
    icon: Terminal,
    items: ["Git", "VS Code", "Docker", "npm/pnpm"],
  },
];
---

<section id="skills" class="py-20 relative">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t("skills.title")}</h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        {t("skills.description")}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        skills.map((skill) => (
          <div class="glass p-6 rounded-2xl hover:bg-white/10 transition-colors duration-300 group">
            <div class="w-12 h-12 bg-indigo-500/20 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <skill.icon class="w-6 h-6 text-indigo-400" />
            </div>
            <h3 class="text-xl font-semibold mb-4">{skill.category}</h3>
            <ul class="space-y-2">
              {skill.items.map((item) => (
                <li class="flex items-center gap-2 text-slate-400">
                  <div class="w-1.5 h-1.5 rounded-full bg-indigo-500" />
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
